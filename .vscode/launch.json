{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "test",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["--runInBand", "--no-cache"],
      "runtimeArgs": ["--inspect-brk", "--nolazy"],
      "protocol": "inspector",
      "console": "internalConsole",
      "internalConsoleOptions": "neverOpen",
      "stopOnEntry": false,
      "smartStep": true,
      "sourceMaps": true
    }
  ]
}
